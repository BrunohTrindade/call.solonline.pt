APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
# Forma A (sem domínio): defina APP_URL como a URL pública do backend
# Ex.: APP_URL=http://SEU_IP:8080

# URL pública do frontend (usada em integrações e documentação)
# Em dev, pode ser seu Vite: http://localhost:5173
FRONTEND_URL=http://localhost:5173

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=solonline
DB_USERNAME=root
DB_PASSWORD=

SESSION_DRIVER=cookie
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# --- CORS ---
# Liste as origens permitidas separadas por vírgula.
# Em dev o backend aceita por padrão localhost:5173/3000; em produção configure explicitamente.
# Forma A (portas): backend 8080, frontend 8081
# Ex.: CORS_ALLOWED_ORIGINS=http://SEU_IP:8081
CORS_ALLOWED_ORIGINS=

# Se usar cookies com Sanctum (SPA stateful), configure o domínio e os hosts stateful.
# Para tokens Bearer (Personal Access Tokens), normalmente NÃO é necessário.
# SESSION_DOMAIN=.seudominio.com
# SANCTUM_STATEFUL_DOMAINS=app.seudominio.com

# --- HTTPS/Proxy ---
# Force URLs as https (use behind proxy/CDN or when SSL is enabled)
# FORCE_HTTPS=true
# Trust specific proxies/CDNs (comma-separated) or use * if you fully trust the edge/load balancer
# TRUSTED_PROXIES=*

# --- WebCron (sem SSH) ---
# Enable HTTP endpoint to trigger scheduler and queue worker
# WEB_CRON_ENABLED=true
# Random strong token to authorize web cron requests
# WEB_CRON_TOKEN=change_me_to_a_strong_secret
# Optional: allow only specific source IPs (comma-separated)
# WEB_CRON_ALLOWED_IPS=1.2.3.4,5.6.7.8

# --- Admin default (seeder) ---
# Ajuste estes valores em produção antes de rodar php artisan migrate --seed
ADMIN_NAME=Admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
